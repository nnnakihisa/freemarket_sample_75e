.user__show 
  .header
    .header__heading
      %h1.header__heading__icon
        = link_to image_tag("itemsimage/logo.png", width: '140'),"/" 
      .header__heading__searchbox
        .from
          ※(追加実装項目)カテゴリーから探す※
        .submit
          .submit__icon
            = image_tag "itemsimage/icon-search 1.png", size: "20x20"
      
    .header__navbar
      %ul.navbar__left
        %li.navbar__left__categories
          = link_to "カテゴリー", "#",  id: 'catebtn'
          .categories__lists
            %ul.categories__list
              %li.categories__list__pearent
        %li.navbar__left__brands
          = link_to "ブランド", "#", id: 'brandbtn'
          %ul.brands__list
      %ul.navbar__right
        %li.login
          = link_to "ログイン", "#"
        %li.newmemmber
          = link_to "新規会員登録", "#"
    
    /.header__list


  .user__mypage
    = render "user__left"

    .user__right
      .card__erea
        .card__erea__text
          支払方法
        .card__erea__add
          クレジットカード一覧
          = button_to "クレジットカードを追加する", new_user_card_path(current_user), method: :get, class: "submit__erea__btn"
        .card__erea__method
          = link_to "支払方法について  >", "#"
        


  .applink
    .applink__inner
      .applink__inner__title
        だれでもかんたん、人生を変えるフリマアプリ
      .applink__inner__text
        今すぐ無料ダウンロード！
      .applink__inner__link
        = link_to image_tag("itemsimage/appstoer.png", size: "180x53", class: 'link__btn'),"#"
        = link_to image_tag("itemsimage/googleplay.png", size: "180x53", class: 'link__btn'),"#"

  .footer
    %ul.contents
      %li.content
        %h2.content__head FURIMAについて
        %ul
          %li
            = link_to "会社概要(運営会社)", "#"
          %li
            = link_to "プライバシーポリシー", "#"
          %li
            = link_to "FURIMA利用規約", "#"
          %li
            = link_to "ポイントに関する特約", "#"
      %li.content
        %h2.content__head FURIMAを見る
        %ul
          %li
            = link_to "カテゴリー一覧", "#"
          %li
            = link_to "ブランド一覧", "#"
      %li.content
        %h2.content__head ヘルプ＆ガイド
        %ul
          %li
            = link_to "FURIMAガイド", "#"
          %li
            = link_to "FURIMAロゴ利用ガイドライン", "#"
          %li
            = link_to "お知らせ", "#"
    .footer__logo
      = link_to image_tag("itemsimage/logo-white.png", size: "160x46", class: 'link__btn'),"/"
    %p ©︎ FURIMA

  = link_to "#" do
    .purchasebtn
      %span.purchasebtn__text
        出品する
      = image_tag "itemsimage/icon_camera.png", width: '54', class: 'purchasebtn__icon'
