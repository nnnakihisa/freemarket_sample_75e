.header__heading
  %h1.header__heading__icon
    = link_to image_tag("itemsimage/logo.png", width: '140'),"/" 
  .header__heading__searchbox
    .from
      カテゴリーから探す
    .submit
      .submit__icon
        = image_tag "itemsimage/icon-search 1.png", size: "20x20"
.header__navbar
  %ul.navbar__left
    %li.navbar__left__categories
      = link_to "#", class: "category__search" do
        カテゴリー
      %ul.category__parent
        - @parents.each do |parent|
          %li
            = link_to "#", class: "category__parent--name" do
              = parent.name
            %ul.category__child
              - parent.children.each do |child|
                %li
                  = link_to "#", class: "category__child--name" do
                    = child.name
                  %ul.category__grandchild
                    - child.children.each do |grandchild|
                      %li
                        = link_to "#", class: "category__child--name" do
                          = grandchild.name
    %li.navbar__left__brands
      = link_to "ブランド", "#", id: 'brandbtn'
      %ul.brands__list
  %ul.navbar__right
    - if user_signed_in?
      %li.good
        = link_to "いいね一覧", "#"
      %li.information
        = link_to "お知らせ", "#"
      %li.todolist
        = link_to "やることリスト", "#"
      %li.mypage
        = link_to "マイページ", user_path
    -else
      %li.login
        = link_to "ログイン",  new_user_session_path
      %li.newmemmber
        = link_to "新規会員登録", new_user_registration_path