.user__new
  .header
    = render 'header'
    .header__list
      %ol
        %li.header__list__text.red
          会員情報
          .header__list__user__rod.red
        %li.header__list__text
          個人情報
          .header__list__user__rod.red
        %li.header__list__text
          商品送付先住所情報
          .header__list__user__rod
        %li.header__list__text.text__none
          完了
          .header__list__user__rod

  .account
    .account__number
      %h3 本人確認
    .account__input
      .account__input__form
        = form_for @person_info do |f| 
          .person__confirmation.peron__address
            %P
              安心・安全にご利用いただくために、お客さまの本人
              情報の登録にご協力ください。他のお客さまに公開
              されることはありません。
           
          .field
            .field__label
              お名前(全角)
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :family_name, placeholder: "例)山田", class: "field__input__ecality", data: {name: "性"}
              = f.text_field :first_name,  placeholder: "例)彩",  class: "field__input__ecality", data: {name: "名"}
          
          .field
            .field__label
              お名前かな(全角)
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :family_kana, placeholder: "例)やまだ", class: "field__input__ecality", data: {name: "性かな"}
              = f.text_field :first_kana,  placeholder: "例)あや",  class: "field__input__ecality", data: {name: "名かな"}
            
          .field
            .field__label
              生年月日
              %span.field__label__require
                必須
            .field__input 
              != sprintf(f.date_select(:birth_date, use_month_numbers: true, start_year: (Time.now.year), end_year: 1900, prompt: "--", with_css_classes: "XXXXX", data: {name: "生年月日"}, date_separator:'%s'),'年','月')+'日'
              -# != sprintf(f.date_select(:birth_date, prefix:'birthday',with_css_classes:'XXXXX', prompt:"--",use_month_numbers:true, start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+'日'
              -# field__input__year
          .submit
            = f.submit "次に進む", class: "submit__btn"

  
  .footer__user