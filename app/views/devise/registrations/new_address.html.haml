= render 'layouts/notifications'
.user__new
  .header
    = render 'header'
    .header__list
      %ol
        %li.header__list__text.red
          会員情報
          .header__list__user__rod.red
        %li.header__list__text.red
          個人情報
          .header__list__user__rod.red
        %li.header__list__text
          商品送付先住所情報
          .header__list__user__rod.red
        %li.header__list__text
          クレジットカード登録
          .header__list__user__rod
        %li.header__list__text.text__none
          完了
          .header__list__user__rod


  .account
    .account__number
      %h3 商品送付先住所情報
    .account__input
      .account__input__form
        = form_for @address, url:addresses_path, id: "new__user__address" do |f|
          .field
            .field__label
              送付先氏名
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :family_name, placeholder: "例)山田", class: "field__input__ecality", data: {name: "性"}
              = f.text_field :first_name,  placeholder: "例)彩",  class: "field__input__ecality", data: {name: "名"}
            
          .field
            .field__label
              送付先氏名かな(全角)
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :family_kana, placeholder: "例)やまだ", class: "field__input__ecality", data: {name: "性かな"}
              = f.text_field :first_kana,  placeholder: "例)あや",  class: "field__input__ecality", data: {name: "名かな"}

          .field
            .field__label
              郵便番号
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :zipcode ,placeholder: "例)123-4567", class: "field__input__defalut", data: {name: "郵便番号"}

          .field
            .field__label
              都道府県
              %span.field__label__require
                必須
            .field__input 
              = f.select :prefecture_id, Prefecture.all.map { |pre| [pre.name, pre.id] },{}, class: "field__input__prefecture"

          .field
            .field__label
              市区町村
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :city, placeholder: "例)横浜市緑区", class: "field__input__defalut", data: {name: "市区町村"}


          .field
            .field__label
              番地
              %span.field__label__require
                必須
            .field__input 
              = f.text_field :street, placeholder: "例)青山1-1-1", class: "field__input__defalut", data: {name: "番地"}
            
          .field
            .field__label
              建物名
              %span.field__label__any
                任意
            .field__input 
              = f.text_field :apartment, placeholder: "例)柳ビル103", class: "field__input__defalut__card"

          .field
            .field__label
              お届け先の電話番号
              %span.field__label__any
                任意
            .field__input 
              = f.telephone_field :tell, placeholder: "例)09012345678", class: "field__input__defalut__none", data: {name: "電話番号"}

          .submit
            = f.submit "次に進む", class: "submit__btn"

          .input__confirmation
            ※ 本人情報は正しく入力してください。会員登録後、
            修正するにはお時間を頂く場合があります。

          .input__terms
            「送信」のボタンを押すことにより、
            = link_to " 利用規約", "#"
            に同意したものとみなします

  .footer__user